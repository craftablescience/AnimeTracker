<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.SettingsActivity">

    <include layout="@layout/settings_toolbar" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/settings_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/settings_bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        app:itemBackground="@android:color/background_light"
        app:itemIconTint="@drawable/bottom_navigation_selection_tint"
        app:itemTextColor="@drawable/bottom_navigation_selection_tint"
        app:menu="@menu/settings_bottom_navigation_menu" >

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>